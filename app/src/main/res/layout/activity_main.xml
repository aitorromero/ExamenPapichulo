<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumnedam.examen.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView"
        android:text="Benvingut" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Introdueix el teu nom"
        android:ems="10"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/etNom" />

    <Button
        android:text="Començar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:id="@+id/btnComenzar" />

    <TextView
        android:text="Que vols fer?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="121dp"
        android:id="@+id/textView2"
 />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView"
        >
    <RadioButton
        android:text="Multiplicació"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_alignTop="@+id/radioButton3"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/btnMultiplicacio"
        android:onClick="seleccionarTipoPreguntas"/>
    <RadioButton
        android:text="Suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSuma"
        android:layout_marginTop="22dp"
        android:layout_alignBaseline="@+id/radioButton"
        android:layout_alignBottom="@+id/radioButton"
        android:layout_alignStart="@+id/radioButton4"
        android:onClick="seleccionarTipoPreguntas"/>
    <RadioButton
        android:text="Resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/btnResta"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/editText"
        android:onClick="seleccionarTipoPreguntas"/>
     <RadioButton
        android:text="Divisió"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/btnDivisio"
        android:layout_below="@+id/radioButton"
        android:layout_alignEnd="@+id/radioButton"
        android:onClick="seleccionarTipoPreguntas"/>

        <RadioButton
            android:text="General"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton3"
            android:layout_alignStart="@+id/button"
            android:layout_marginTop="22dp"
            android:id="@+id/btnGeneral" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginTop="38dp" >

        <RadioButton
            android:text="5 preguntes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9"
            android:layout_weight="1" />

        <RadioButton
            android:text="10 preguntes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton7"
            android:layout_weight="1" />

        <RadioButton
            android:text="20 preguntes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton6"
            android:layout_weight="1" />
    </RadioGroup>

</RelativeLayout>
